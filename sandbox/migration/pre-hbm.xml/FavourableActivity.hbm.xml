<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
<hibernate-mapping>
	<class name="com.jcommerce.core.model.FavourableActivity"
		table="tis_favourable_activity">
		<id name="id" column="act_id" type="string" length="32">
			<generator class="uuid.hex" />
		</id>
		<property name="actName" column="act_name" length="255" />
		<property name="startTime" column="start_time" />
		<property name="endTime" column="end_time" />
		<property name="userRank" column="user_rank" length="255" />
		<property name="actRange" column="act_range" length="3" />
		<property name="actType" column="act_type" length="3" />
		<property name="sortOrder" column="sort_order" length="3" />
		<property name="actRangeExt" column="act_range_ext"
			length="255" />
		<property name="minAmount" column="min_amount" />
		<property name="maxAmount" column="max_amount" />
		<property name="actTypeExt" column="act_type_ext" />
		<property name="gift" column="gift" type="text" />
	</class>
</hibernate-mapping>