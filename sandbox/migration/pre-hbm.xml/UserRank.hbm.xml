<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
<hibernate-mapping>
 <class name="com.jcommerce.core.model.UserRank" table="tis_user_rank" >
  <id name="id" column="rank_id" type="string" length="32">
   <generator class="uuid.hex" />
  </id>

  <property name="name" column="rank_name"/>
  <property name="maxPoints" column="max_points"/>
  <property name="minPoints" column="min_points"/>
  <property name="discount" column="discount"/>
  <property name="showPrice" column="show_price"/>
  <property name="special" column="special_rank"/>

 </class>
</hibernate-mapping>