<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
<hibernate-mapping>
	<class name="com.jcommerce.core.model.Navigation" table="navigation">
		<id name="id" column="id" type="string" length="32">
			<generator class="uuid.hex" />
		</id>
		<property name="categoryType" column="ctype" type="int" />
		<property name="categoryId" column="cid" length="5" />
		<property name="name" column="name" length="255" />
		<property name="show" column="ifshow"/>
		<property name="viewOrder" column="vieworder" length="1" />
		<property name="openNew" column="opennew"/>
		<property name="url" column="url" length="255" />
		<property name="type" column="type" type="int"/>
	</class>
</hibernate-mapping>